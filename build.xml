	        <jvmarg value="-Xmx10G" />
                    <arg line="--graphics false "/>
		<arg line="--configPath ../config/ladder/"/>
                <arg line="--simulatorConfigFile SpaceSettlersConfig.xml"/>
                    <arg line="--ladderConfigFile SelfLadderConfig.xml"/>
                    <classpath>
                        <pathelement location="${dist}/spacesettlers.jar"/>
                    </classpath>
            </java>
	</target>
	
