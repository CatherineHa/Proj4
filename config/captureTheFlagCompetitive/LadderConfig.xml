<?xml version="1.0" encoding="UTF-8"?>
<LadderConfig>
	<!-- The number of times each match is repeated -->
	<numRepeatMatches>5</numRepeatMatches>

	<!-- The maximum number of variable (e.g. can change each match) teams in a game -->
	<maximumNumberVariableTeams>1</maximumNumberVariableTeams>
	
	<!-- Write out the results to this file -->
	<outputFileName>self-ladder.html</outputFileName>
	
	<!-- The list of static clients/teams.  These play in each match. -->
	<staticTeams>
		<HighLevelTeamConfig>
			<teamName>AggressiveFlagWith3Ships</teamName>
			<configFile>aggressive-flag3ships-clientinit.xml</configFile>
		</HighLevelTeamConfig>
	</staticTeams>

	<!-- The list of variable clients/teams.  Each will participate in numRepeatMatches but against 
		 each other and the static teams. -->
	<variableTeams>
		<HighLevelTeamConfig>
			<teamName>RandomTeam</teamName>
			<configFile>random-flag-clientinit.xml</configFile>
		</HighLevelTeamConfig>
		<HighLevelTeamConfig>
			<teamName>2ShipPassiveFlag</teamName>
			<configFile>passive-flag2ships-clientinit.xml</configFile>
		</HighLevelTeamConfig>
		<HighLevelTeamConfig>
			<teamName>3ShipPassiveFlag</teamName>
			<configFile>passive-flag3ships-clientinit.xml</configFile>
		</HighLevelTeamConfig>
		<HighLevelTeamConfig>
			<teamName>2ShipAggressiveFlag</teamName>
			<configFile>aggressive-flag2ships-clientinit.xml</configFile>
		</HighLevelTeamConfig>
		<HighLevelTeamConfig>
			<teamName>3ShipAggressiveFlag</teamName>
			<configFile>aggressive-flag3ships-clientinit.xml</configFile>
		</HighLevelTeamConfig>
	</variableTeams>

</LadderConfig>